<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.bottomNav.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPagoda"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardBackgroundColor="#E67436"
        app:layout_constraintTop_toBottomOf="@id/cardAppBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgPagodaBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pagoda"
                android:scaleType="centerCrop"
                android:alpha="0.4"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/txtPagoda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/pagodas"
                android:letterSpacing="0.1"
                android:textSize="24sp"
                android:fontFamily="@font/walkwayblack"
                android:textColor="@color/colorAccent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHotel"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardBackgroundColor="#1987DD"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardPagoda">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgHotelBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hotel"
                android:scaleType="centerCrop"
                android:alpha="0.4"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/txtHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/hotels"
                android:letterSpacing="0.1"
                android:textSize="24sp"
                android:fontFamily="@font/walkwayblack"
                android:textColor="@color/colorAccent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>