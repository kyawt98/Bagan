<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHotel"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txtHotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ViewPoint Ecolodge"
                app:layout_constraintLeft_toRightOf="@id/imgHotel"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>
            
            <ImageView
                android:id="@+id/icRoomType"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_bed"
                app:layout_constraintTop_toBottomOf="@id/txtHotelName"
                app:layout_constraintLeft_toRightOf="@id/imgHotel"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtRoomType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deluxe Double"
                app:layout_constraintLeft_toRightOf="@id/icRoomType"
                app:layout_constraintTop_toTopOf="@id/icRoomType"
                app:layout_constraintBottom_toBottomOf="@id/icRoomType"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/icAddress"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_location"
                app:layout_constraintTop_toBottomOf="@id/icRoomType"
                app:layout_constraintLeft_toRightOf="@id/imgHotel"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="255 feet from downtown"
                app:layout_constraintLeft_toRightOf="@id/icAddress"
                app:layout_constraintTop_toTopOf="@id/icAddress"
                app:layout_constraintBottom_toBottomOf="@id/icAddress"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtRoomPriceUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/icAddress"
                app:layout_constraintLeft_toLeftOf="@id/icAddress"
                app:layout_constraintRight_toLeftOf="@id/txtRoomPrice"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="MMK"/>

            <TextView
                android:id="@+id/txtRoomPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/icAddress"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/txtRoomPriceUnit"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="130000"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>